= form_for(@user, url: user_path(@user)) do |f|
  = render 'shared/errors', object: @user
  .row
    .col-md-12
      .form-group
        = f.label :username, class: 'form-label'
        = f.text_field :username, autofocus: true, class: 'form-control'
  .row
    .col-md-6
      .form-group
        = f.label :first_name, class: 'form-label'
        = f.text_field :first_name, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :last_name, class: 'form-label'
        = f.text_field :last_name, class: 'form-control'
  .row
    .col-md-6
      .form-group
        = f.label :location, class: 'form-label'
        = f.text_field :location, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :phone, class: 'form-label'
        = f.text_field :phone, class: 'form-control'
  .row
    .col-md-6
      .form-group
        = f.label :description, class: 'form-label'
        = f.text_area :description, rows: 5, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :bio, class: 'form-label'
        = f.text_area :bio, rows: 5, class: 'form-control'
  .row
    .col-md-12
      .form-group
        %h2 Edit Social media links
        = f.nested_fields_for :social_media_links do |smlf|
          = smlf.remove_nested_fields_link
          = smlf.text_field :name
          = smlf.text_field :url
        = f.add_nested_fields_link :social_media_links
  -# .row
  -#   .col-md-12
  -#     .form-group
  -#       %h2 Edit skills
  -#       = f.nested_fields_for :skills do |sf|
  -#         = sf.remove_nested_fields_link
  -#         = sf.text_field :name
  -#       = f.add_nested_fields_link :skills
  .form-actions
    = f.submit "Update information", class: 'btn btn-success btn-cons'
    = link_to "Cancel", user_path(@user)