= content_for(:title) do
  = "Projects - #{current_user.first_name} #{current_user.last_name} | Timeliner"

.container
  .row.full.page-title.clearfix
    = link_to 'New', new_project_path, class: 'btn small default pull-right'
    %h2.dark.underline.left.thick.yellow
      Projects

- unless @projects.any?
  = render 'first_project'

- @projects.each_with_index do |project, index|
  = render 'project', project: project, index: index
