var overlay = $(".overlay"),
    popup   = $("#popup"),
    wrapper = $(".wrapper"),
    header  = $('header'),
    close_btn = $("button.overlay-close");

header.slideUp('fast',function(){
  overlay.addClass('open');
  wrapper.addClass('overlay-open');
  $("#popup").html("<%= escape_javascript(render partial: 'project_popup', locals: {project: @project} ) %>");
  $("body").addClass('noscroll');

  $('.owl-carousel').owlCarousel({
    items: 1,
    dots: true
  });
});
