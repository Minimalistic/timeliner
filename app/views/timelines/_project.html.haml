%li
  .screenshot
    = image_for(project)
    .links
      = link_to 'Live', project.link_live
      = link_to 'Source', project.link_source
  %h3= project.title
  %strong
    client:
    %span= project.client
  %strong
    year:
    %span= project.published_on.year

  %p= markdown(project.description)

  %strong Role
  = markdown(project.role)