= render 'header'

#about.container
  -# = image_tag('science.png')
  .row
    .col-100
      .about-bubble
        .bio= @user.bio
        .email= "Email me at #{@user.email}"
        .location= "I live in #{@user.location}"
        .phone= "Call me at #{@user.phone}"
      .image
        = image_tag(@user.image, alt: "#{@user.first_name} #{@user.last_name}", class: 'active')
        %a.email.info-icon{:href => '#', :data => {:show => "email"}}
          %i.fa.fa-envelope-o
        %a.location.info-icon{:href => '#', :data => {:show => "location"}}
          %i.fa.fa-map-marker
        %a.phone.info-icon{:href => '#', :data => {:show => "phone"}}
          %i.fa.fa-phone

#skills.container
  .row
    .col-100
      - @user.skills.each do |skill|
        %span= skill.name

%section#timeline
  .timeline
    - @milestones.each do |milestone|
      .event
        .bubble
          = put_content(:p, milestone.title)
          = put_content(:p, milestone.company)
          = put_content(:p, milestone.location)
          = put_content(:p, milestone.date_start)

= render 'footer'