%header
  %h1
    = "#{@user.first_name} #{@user.last_name}"
    %span
      |
      = @user.description
  %nav
    %a(href='#') about
    %a(href='#') timeline
    %a(href='#') projects
    %a(href='#') contact
%section#about
  %p= @user.bio
  = image_tag(@user.image)
  %p= @user.email
  %p= @user.location
  = put_content(:p, @user.phone)
  %p
    - @user.skills.each do |skill|
      %span= skill.name
%section#social-links
  %ul
    - @user.social_media_links.each do |link|
      %li= link_to link.name, link.url, target: '_blank'

%section#timeline
  .timeline
    - @milestones.each do |milestone|
      .event
        .bubble
          = put_content(:p, milestone.title)
          = put_content(:p, milestone.company)
          = put_content(:p, milestone.location)
          = put_content(:p, milestone.date_start)

%footer
  All copyrights reserved - Timeliner &copy;
  = "#{Date.today.year}."