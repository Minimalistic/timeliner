/ BEGIN HEADER
.header.navbar.navbar-inverse
  / BEGIN TOP NAVIGATION BAR
  .navbar-inner
    / BEGIN NAVIGATION HEADER
    .header-seperation
      / BEGIN MOBILE HEADER
      %ul#main-menu-toggle-wrapper.nav.pull-left.notifcation-center{:style => "display:none"}
        %li.dropdown
          %a#main-menu-toggle{:href => "#main-menu"}
            .iconset.top-menu-toggle-white
      / END MOBILE HEADER
      / BEGIN LOGO
      %a{:href => "#"}
        = image_tag('theme/logo.png', class: 'logo', alt: '', width: '106', height: '21', data: {'src': image_path('theme/logo.png'), 'src-retina': image_path('theme/logo2x.png')})
      / END LOGO
      / BEGIN LOGO NAV BUTTONS
      %ul.nav.pull-right.notifcation-center
        %li#header_task_bar.dropdown
          %a.dropdown-toggle.active{"data-toggle" => "", :href => "#"}
            .iconset.top-home
        %li#header_inbox_bar.dropdown
          %a.dropdown-toggle{:href => "#"}
            .iconset.top-messages
            %span#msgs-badge.badge 2
        / BEGIN MOBILE CHAT TOGGLER
        %li#portrait-chat-toggler.dropdown{:style => "display:none"}
          %a.chat-menu-toggle{:href => "#sidr"}
            .iconset.top-chat-white
        / END MOBILE CHAT TOGGLER
      / END LOGO NAV BUTTONS
    / END NAVIGATION HEADER
    / BEGIN CONTENT HEADER
    .header-quick-nav
      / BEGIN HEADER LEFT SIDE SECTION
      .pull-left
        / BEGIN SLIM NAVIGATION TOGGLE
        %ul.nav.quick-section
          %li.quicklinks
            %a#layout-condensed-toggle{:href => "#"}
              .iconset.top-menu-toggle-dark
        / END SLIM NAVIGATION TOGGLE
        / BEGIN HEADER QUICK LINKS
        %ul.nav.quick-section
          %li.quicklinks
            %a{:href => "#"}
              .iconset.top-reload
          %li.quicklinks
            %span.h-seperate
          %li.quicklinks
            %a{:href => "#"}
              .iconset.top-tiles
          / BEGIN SEARCH BOX
          %li.m-r-10.input-prepend.inside.search-form.no-boarder
            %span.add-on
              %span.iconset.top-search
            %input.no-boarder{:name => "", :placeholder => "Search Dashboard", :style => "width:250px;", :type => "text"}/
          / END SEARCH BOX
        / BEGIN HEADER QUICK LINKS
      / END HEADER LEFT SIDE SECTION
      / BEGIN HEADER RIGHT SIDE SECTION
      .pull-right
        .chat-toggler
          / BEGIN NOTIFICATION CENTER
          %a#my-task-list.dropdown-toggle{"data-content" => "", "data-original-title" => "Notifications", "data-placement" => "bottom", "data-toggle" => "dropdown", :href => "#"}
            .user-details
              .username
                %span.badge.badge-important> 3
                \ John
                %span.bold  Smith
            .iconset.top-down-arrow
          #notification-list{:style => "display:none"}
            %div{:style => "width:300px"}
              / BEGIN NOTIFICATION MESSAGE
              .notification-messages.info
                .user-profile
                  = image_tag('theme/profiles/d.jpg', alt: '', width: '35', height: '35', data: {'src': image_path('theme/profiles/d.jpg'), 'src-retina': image_path('theme/profiles/d2x.jpg')})
                  / <img src="assets/img/profiles/d.jpg" alt="" data-src="assets/img/profiles/d.jpg" data-src-retina="assets/img/profiles/d2x.jpg" width="35" height="35">
                .message-wrapper
                  .heading Title of Notification
                  .description Description...
                  .date.pull-left A min ago
                .clearfix
              / END NOTIFICATION MESSAGE
          / END NOTIFICATION CENTER
          / BEGIN PROFILE PICTURE
          .profile-pic
            = image_tag('theme/profiles/avatar_small.jpg', alt: '', width: '35', height: '35', data: {'src': image_path('theme/profiles/avatar_small.jpg'), 'src-retina': image_path('theme/profiles/avatar_small2x.jpg')})
          / END PROFILE PICTURE
        / BEGIN HEADER NAV BUTTONS
        %ul.nav.quick-section
          / BEGIN SETTINGS
          %li.quicklinks
            %a#user-options.dropdown-toggle.pull-right{"data-toggle" => "dropdown", :href => "#"}
              .iconset.top-settings-dark
            %ul.dropdown-menu.pull-right{"aria-labelledby" => "user-options", :role => "menu"}
              %li
                %a{:href => "#"} Normal Link
              %li
                %a{:href => "#"}
                  Badge Link  
                  %span.badge.badge-important.animated.bounceIn 2
              %li.divider
              %li
                %a{:href => "#"}
                  %i.fa.fa-power-off>
                  \  Separated Link
          / END SETTINGS
          %li.quicklinks
            %span.h-seperate
          / BEGIN CHAT SIDEBAR TOGGLE
          %li.quicklinks
            %a#chat-menu-toggle.chat-menu-toggle{:href => "#sidr"}
              .iconset.top-chat-dark
                %span#chat-message-count.badge.badge-important.hide 1
            / BEGIN OPTIONAL RECENT CHAT POP UP NOTIFICATION
            .simple-chat-popup.chat-menu-toggle.hide
              .simple-chat-popup-arrow
              .simple-chat-popup-inner
                %div{:style => "width:100px"}
                  .semi-bold Name
                  .message Message...
            / END OPTIONAL RECENT CHAT POP UP NOTIFICATION
          / END CHAT SIDEBAR TOGGLE
        / END HEADER NAV BUTTONS
      / END HEADER RIGHT SIDE SECTION
    / END CONTENT HEADER
  / END TOP NAVIGATION BAR
/ END HEADER